# ==================== LOCAL DEVELOPMENT ====================
DEBUG=True
SECRET_KEY=your-secret-key-here-change-this-in-production

# ==================== DATABASE ====================
# SQLite (par défaut - développement)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# PostgreSQL (pour production sur Railway)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=railway_db
# DB_USER=postgres
# DB_PASSWORD=your-password
# DB_HOST=our-db-host.railway.app
# DB_PORT=5432

# ==================== DJANGO SECURITY ====================
ALLOWED_HOSTS=localhost,127.0.0.1

# HTTPS Settings (mettre à True en production)
SECURE_SSL_REDIRECT=False
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# ==================== FIREBASE CONFIGURATION ====================
# (Les clés Firebase sont déjà dans les templates HTML)
# Vous pouvez les y modifier directement ou les mettre ici après refactorisation

# ==================== GUNICORN ====================
# Pour production
WORKERS=4
THREADS=1
WORKER_CLASS=sync
